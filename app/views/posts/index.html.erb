
<h1 class="text-center text-white">Team Rankings by Date</h1>
<div class="row">
	<% @posts.each do |post| %>
		<div class="col">
			<div class="card bg-dark text-white">
				<div class="card-body">
					<h5 class="card-title"><%= post.title %></h5>
					<ol class="list-group list-group-numbered">
						<% post.teams.each do |team| %>
							<li class="list-group-item bg-dark text-white border-0"><%= team.name %></li>
						<% end %>
					</ol>
					<div class="mt-3">
						<%= link_to 'View Rankings', post_path(post), class: 'btn btn-outline-light' %>
					</div>
				</div>
			</div>
		</div>
	<% end %>
</div>
<div class="pagination justify-content-center">
	<%= paginate @posts %>
</div>